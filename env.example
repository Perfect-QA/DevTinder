# ===========================================
# PERFECT AI BACKEND - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to backend/.env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary MongoDB URL (for production/cloud)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/perfectAI
# Local MongoDB URL (for development)
DB_URL=mongodb://localhost:27017/perfectAI

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=7d
PASSWORD_SALT_ROUNDS=12
COOKIE_EXPIRY=86400000
SESSION_SECRET=your-session-secret-change-this-in-production

# ===========================================
# OAUTH CONFIGURATION (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
MAX_FILES=10

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# SESSION CLEANUP CONFIGURATION
# ===========================================
# REQUIRED: Session expiry time in milliseconds (30 days = 30 * 24 * 60 * 60 * 1000)
SESSION_EXPIRY_TIME=2592000000
# Alternative: Session expiry in days (will be converted to milliseconds)
# SESSION_EXPIRY_DAYS=30
SESSION_CLEANUP_CRON=0 */6 * * *
TZ=UTC

# ===========================================
# ACCOUNT LOCKOUT CONFIGURATION
# ===========================================
# Maximum failed login attempts before account lockout
MAX_FAILED_LOGIN_ATTEMPTS=5
# Account lockout duration in minutes
    ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
DEBUG=false
ENABLE_SWAGGER=false

